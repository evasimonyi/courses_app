{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "jsx-quotes": [
      "error",
      "prefer-double"
    ],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "semi": true,
        "jsxSingleQuote": false, // for enforcing double quotes in html code
        "singleQuote": true,
        "useTabs": false,
        "max-len": [
          "warn",
          {
            "code": 100
          }
        ],
        "printWidth": 100,
        "importOrder": [
          "^react(.*)$",
          "<THIRD_PARTY_MODULES>",
          "./types",
          "^[.](?!.*.(scss|css)$).*$",
          "(.*).(scss|css)$"
        ],
        "endOfLine": "auto" // for Delete `CR` [prettier/prettier] error
      }
    ],
    "@typescript-eslint/no-namespace": "off",
    "no-duplicate-imports": "error"
  }
}
